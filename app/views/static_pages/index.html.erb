<h1>Flickr User Photos</h1>
<%= form_with url: root_path, method: :get do |form| %>
  <% if flash[:error] %>
    <p style="color: red"><%= flash[:error] %></p>
  <% end %>
  <h2>Enter the ID of the User to search photos</h2>
  <div>
    <%= form.label :user_id, "User ID: " %>
    <%= form.text_field :user_id, required: true, value: @user || "" %>
  </div>
  <%= form.submit "Search Photos", style: "margin-top: 1rem; padding: 0.8rem;" %>
<% end %>
<% unless @photos.nil? || @photos.length == 0 %>
  <h1>Photos for User:
    <%= @user %></h1>
  <div style="display: flex; gap: 1rem; margin-top: 1rem; flex-wrap: wrap;">
    <% @photos.each do |photo| %>
      <%= image_tag Flickr.url_b(photo),
      alt: "Photo",
      width: "100%",
      height: "100%",
      style:
        "border-radius: 15px; box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2); flex: 1 1 500px;",
      lazy: true %>
    <% end %>
  </div>
<% else %>
  <h4>No photos found for the user</h4>
<% end %>
